<style>
  html {
    box-sizing: border-box;
  }
  *, *:before, *:after {
    box-sizing: inherit;
  }

  .main-table {
    height: 100vh;
    width: 50%;
    margin-left: auto;
    margin-right: auto;
    min-height: 0;
  }

  .ember-tableish-headers {
    background-color: red;
  }

  .ember-tableish-body {
    min-height: 0;
    overflow-y: scroll;
  }
</style>

{{#ember-tableish class='main-table' as |table|}}
  {{#table.headers as |headers|}}
    {{#headers.header width='10rem'}}
      Kyle
    {{/headers.header}}
    {{#headers.header width='10%'}}
      Justin
    {{/headers.header}}
    {{#headers.header}}
      Turney
    {{/headers.header}}
  {{/table.headers}}

  {{!-- {{#vertical-collection
    tagName='div'
    class=table.bodyCls
    estimateHeight='24px'
    items=items
  as |item|}}
    {{#table.row}}
      <div>{{item.kyle}}</div>
      <div>{{item.justin}}</div>
      <div>{{item.turney}}</div>
    {{/table.row}}
  {{/vertical-collection}} --}}

  {{#vertical-collection
    tagName='div'
    class=table.bodyCls
    estimateHeight='18px'
    items=items
  as |item i|}}
    {{#link-to 'ting' i class=table.rowCls}}
      <div>{{item.kyle}}</div>
      <div>{{item.justin}}</div>
      <div>{{item.turney}}</div>
    {{/link-to}}
  {{/vertical-collection}}

  {{!-- {{#table.body}}
    {{#each items as |item|}}
      {{#table.row}}
        <div>{{item.kyle}}</div>
        <div>{{item.justin}}</div>
        <div>{{item.turney}}</div>
      {{/table.row}}
    {{/each}}
  {{/table.body}} --}}
{{/ember-tableish}}
